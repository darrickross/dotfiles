{
  "cSpell.words": [
    "Automagic",
    "Automagically",
    "dotfile",
    "dotfiles",
    "Gitschooldude"
  ],
  // Associate .stow-local-ignore files with the ignore language
  // As its basically the same thing but for stow instead of git
  "files.associations": {
    ".stow-local-ignore": "ignore"
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[shellscript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
