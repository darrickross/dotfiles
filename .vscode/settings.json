  // Add TOML settings
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentString": "  ",
  "evenBetterToml.formatter.indentTables": true,
  "evenBetterToml.formatter.reorderKeys": true,
  // Associate .stow-local-ignore files with the ignore language
  // As its basically the same thing but for stow instead of git
  "files.associations": {
    "config": "ssh_config",
    "*.ssh_config": "ssh_config",
    ".stow-local-ignore": "ignore"
  },
  "nix.formatterPath": "nixfmt",
  // Shellformater v7.2.8 has problems, work around is to downgrade to v7.2.5
  "shellformat.path": "/home/itsjustmech/.nix-profile/bin/shfmt",
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[nix]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "[shellscript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  // Enable format on save
  "editor.formatOnSave": true
}
